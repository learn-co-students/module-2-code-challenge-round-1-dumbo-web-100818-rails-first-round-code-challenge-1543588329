<h2>Create Heroine</h2>
<ol>
<% if flash[:errors] %>
<% flash[:errors].each do |message| %>
  <li><%= message %></li>
<% end %>
<% end %>
</ol>

<%= form_for @heroine do |f| %>
<p><%= f.label :name %>
<%= f.text_field :name %></p>
<p><%= f.label :super_name %>
<%= f.text_field :super_name %></p>
<p><%= f.label :power %>
<%= f.collection_select :power_id, @powers, :id, :name  %>
<%= f.submit %></p>
<% end %>
